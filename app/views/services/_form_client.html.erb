<%= nested_form_for @service, url: path, method: :post, :html => { class: "form-horizontal validate sical-form sical-form-validated" } do |f| %>


  <% if @service.errors.any?%>
    <% @service.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>

  <div class="form-group row">
    <div class="col-md-8">
      <div class="form-group row">
        <%= f.label :Laboratorio, class: "col-md-3 col-fom-label" %>
       <div class="col-md-9">
          <%= f.collection_select :laboratory_id, @laboratories, :id, :name, {}, class: "form-control", required: "required" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Asunto,class: "col-lg-3 col-fom-label"  %>   
        <div class="col-md-9"> 
        <%= f.text_field :subject ,class: "form-control", required:"required"%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 col-fom-label">
          <%= f.label :Fecha_Aproximada_de_Recojo %>
        </div>
        <div class="date col-md-9 input-wrapper">
          <div class="input-group sical-input-group">
            <%= f.text_field :pick_up_date, value: service.pick_up_date ? service.pick_up_date.strftime("%d/%m/%Y") : '' , class: "form-control sical-datepicker", required: "required", date: true, birth: true %>
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :Muestras, class: "col-md-3 col-fom-label" %>
        <div class="col-md-9 text-right" >
          <p><%= f.link_to_add "Agregar muestra", :sample_preliminaries, class: "btn btn-primary sical-btn-add-menu " %></p>
        </div>
      </div>
        <div class="form-group row">
          <%= f.fields_for :sample_preliminaries do |spre_form| %>
            <div class="form-group row">
              <%= spre_form.label :Nombre,class: "col-lg-3 col-fom-label"  %>   
              <div class="col-md-9"> 
                <%= spre_form.text_field :name  ,class: "form-control", required:"required"%>
              </div>
            </div>
            <div class="form-group row">
              <%= spre_form.label :Cantidad,class: "col-lg-3 col-fom-label"  %>   
              <div class="col-md-9"> 
                <%= spre_form.text_field :quantity  ,class: "form-control only-numbers", required:"required"%>
              </div>
            </div>
            <div class="form-group row">
              <%= spre_form.label :Descripcion,class: "col-lg-3 col-fom-label"  %>   
              <div class="col-md-9"> 
                <%= spre_form.text_area :description  ,class: "form-control",required:"required"%>
              </div>
            </div>  
            <div class="form-group row">
              <div class="col-md-9 text-right"> 
              <%= spre_form.link_to_remove "Borrar" , class: "btn btn-default sical-btn-add-menu "%>
              </div>
            </div>
            
        
      </div>
      <% end %>

    <div class="col-md-4">
      <div class="form-group row">
        <legend><%= f.label :Archivo_Extra %></legend>
        <div id="dropzone">
            <form action="/upload" class="dropzone needsclick dz-clickable" id="demo-upload">
                <div class="dz-message needsclick">
                    Drop files here or click to upload.<br>
                    <span class="note needsclick">(This is just a demo dropzone. Selected files are <strong>not</strong> actually uploaded.)</span>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
  



<% end %>
