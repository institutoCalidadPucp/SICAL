<section class="requests-index">
  <div class="card">
    <div class="content">
      <div class="header card-header-text sical-card-header">
        <h1 class="sical-card-title">
          Solicitudes de Servicio
        </h1>
        <% if !current_user.employee? %>
          <div>
            <%= link_to 'Nueva Solicitud', new_service_path, class: "btn btn-primary align-right"  %>
          </div>
        <% end %>
      </div>
      <div class="sical-content">
        <% if current_user.employee? %>
          <div class="sub-section-cards">
            <div class="col-md-6 sub-section-card is-unread-card">
              <%= render 'sub_section_card', elements: @unattended_services, title: "Revision de Trabajo", controller: "service" %>
            </div>
            <div class="col-md-6 sub-section-card is-read-card">
              <%= render 'sub_section_card', elements: @completed_services, title: "Servicios terminado", controller: "service" %>
            </div>
          </div>
        <% else %>
          <div id="service-table">
            <%= render 'services_table', services: @services %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
