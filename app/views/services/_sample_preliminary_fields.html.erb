<tr class="nested-fields">
  <td><%= f.text_field :name, class: "form-control", maxLength:"40", required:"required"%></td>
  <td><%= f.text_field :quantity, class: "form-control only-numbers", maxLength:"5", required:"required" %></td>
  <td><%= f.text_field :description , class: "form-control", maxLength:"50",required:"required"%></td>
  <td>
    <%= link_to_remove_association f do %>
      <i class="fa fa-times" aria-hidden="true"></i>
    <% end %>
  </td>
</tr>
