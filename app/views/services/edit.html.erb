
<div class="card">
  <div class="tab">
    <button class="tablinks active" onclick="openSection(event, 'service')">Servicios</button>
    <button class="tablinks" onclick="openSection(event, 'samples')">Muestras</button>
  </div>

  <%= nested_form_for @service, url: service_path, :wrapper => false,  method: :put do |f| %>

    <div id="service" class="tabcontent" style="display: block;">
      <h3>Servicios</h3>
      <%= render 'form_client', service: @service, f: f %>
    </div>

    <div id="samples" class="tabcontent">
      <div class="samples-title-wrapper ">
        <div class= "samples-title">Muestras</div>
        <div>
          <%= f.link_to_add "Agregar evaluacion de la muestra" , :sample_processeds, :data => { target: '#sample-information' }, class: "btn btn-default sical-btn-add-menu"%>
        </div>
      </div>
      <div id="sample-information" class="samples-information">
        <% if current_user.employee? %>
          <%= render 'form_worker', service: @service, f: f %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="text-center save-worker">
        <%= link_to "Cancelar", services_path, class: "btn btn-primary sical-btn-cancel" %>
        <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
      </div>
    </div>

  <% end %>
</div>
