<div class="nested-fields">
  <div id="sample-information" class="samples-information ">
    <div class="text-right">
      <%= link_to_remove_association f do %>
        <i class="fa fa-times" aria-hidden="true"></i>
      <% end %>
      <div class="sample-fields">
        <div class="form-group row">
          <%= f.label :Codigo_de_muestra_cliente, class: "col-md-3 col-fom-label" %>
          <div class="col-md-9">
            <%= f.text_field :client_code,class: "form-control", maxLength:"8", required: "required" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Codigo_pucp, class: "col-md-3 col-fom-label" %>
           <div class="col-md-9">
              <%= f.text_field :pucp_code,class: "form-control", maxLength:"8", required: "required" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Categoria, class: "col-md-3 col-fom-label" %>
           <div class="col-md-9">
            <%= f.collection_select :sample_category_id, @sample_categories, :id, :name, {}, class: "form-control", required: "required" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Descripcion, class: "col-md-3 col-fom-label" %>
           <div class="col-md-9">
              <%= f.text_field :description,class: "form-control", maxLength:"80", required: "required" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Valores, class: "col-md-3 col-fom-label" %>
          <div class="col-md-9 text-right" >
            <p>
              <%= link_to_add_association "Agregar valores", f, :sample_features, \
                render_options: { \
                  locals: {
                    disabled: false, \
                    editable: true, \
                  }, \
                }, \
                class: "btn btn-primary sical-btn-add-menu", \
                data: { \
                  association_insertion_node: '.samples-elements', \
                  association_insertion_method: 'append' \
                } \
              %>
            </p>
          </div>
        </div>
        <div class="col-md-9 offset-md-3">
          <div class="form-group row">
            <div class="col-md-6">Descripcion</div>
            <div class="col-md-1">Valor</div>
            <div class="col-md-1"></div>
          </div>
          <div class="samples-elements">
            <%= f.fields_for :sample_features do |spro_form| %>
              <%= render 'sample_feature_fields', f: spro_form %>
            <% end %>
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>