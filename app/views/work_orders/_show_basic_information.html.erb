<div class="form-group row">
  <label class= "col-md-3 col-form-label">Laboratorio</label>
  <div class="col-md-9">
    <%= service.laboratory.name %>
  </div>
</div>

<div class="form-group row">
  <label class= "col-md-3 col-form-label">Fecha Proxima de Recojo</label>
  <div class="col-md-9">
    <%= service.pick_up_date.strftime("%d/%m/%Y") %>
  </div>
</div>

<div class="form-group row">
  <label class= "col-md-3 col-form-label">Asunto</label>
  <div class="col-md-9">
    <%= service.subject %>
  </div>
</div>

<div class="form-group row">
  <label class= "col-md-3 col-form-label">Muestras</label>
</div>
<div class="col-md-9 offset-md-3">
  <div class="form-group row">
    <div class="col-md-4">Nombre</div>
    <div class="col-md-2">Cantidad</div>
    <div class="col-md-6">Descripcion</div>
  </div>
  <div class="samples-elements">
    <%= render 'show_sample_preliminaries', sample_preliminaries: service.sample_preliminaries %>
  </div>
</div>
