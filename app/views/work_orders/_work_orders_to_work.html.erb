<%= form_for @work_order, url: work_order_path, :wrapper => false,  method: :put do |f| %>
    <div id="information" class="tabcontent" style="display: block;">
      <h3>Informacion Cliente</h3>
        <%= render 'show_basic_information', service: @work_order.sample_processed.service, f: f %>
    </div>
          
    <div id="custody" class="tabcontent">
       <h3>Cadena de Custodia</h3>	
        <%#= render 'form_worker', work_order: work_order, h: f %>
    </div>  

     <div id="report" class="tabcontent">
       <h3>Reporte</h3>	
        <%= render 'report_employee', sample: @work_order.sample_processed, f: f %>
    </div>            

    <div class="form-group">
      <div class="text-center save-worker">
        <%= link_to "Cancelar", work_order_path, class: "btn btn-primary sical-btn-cancel" %>
        <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
      </div>
    </div>  
<% end %>



