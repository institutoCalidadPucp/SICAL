<div class="material-datatables">
  <table class="table table-hover sical-data-table sical-data-table" data-placeholder="Buscar Item">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Descripción</th>
        <th>Fecha de Ingreso</th>
        <th>Vida útil(años)</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% inventories.each do |inventory| %>
            <tr>
              <td><%= inventory.name %></td>
              <td><%= inventory.description %></td>
              <td>
                <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, view_inventory_path(inventory), class: "btn btn-info btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
                <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_inventory_path(inventory), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, inventory_path(inventory),class: "btn btn-warning btn-sm", data: { "toggle" => "tooltip" }, title: "Eliminar", method: :delete %>
              </td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>