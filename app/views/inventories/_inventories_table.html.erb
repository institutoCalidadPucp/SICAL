<div class="material-datatables">
  <table class="table table-hover sical-data-table sical-data-table" data-placeholder="Buscar Item">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% inventories.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.brand %></td>
              <td><%= item.product_model %></td>
              <td><%= item.status %></td>
              <td>
                <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, inventory_path(item), class: "btn btn-info btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
                <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_inventory_path(item), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
                <%= link_to inventories_path(item),class: "btn btn-default btn-sm", data: { "toggle" => "tooltip" }, title: "Activar/Desactivar", method: :delete do%>
                  <% if item.status == "active" %>
                    <i class="fa fa-lock" aria-hidden="true"></i>
                  <% else %>
                    <i class="fa fa-unlock" aria-hidden="true"></i>
                  <% end %>
                <% end -%>
              </td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>