<div class="material-datatables">
  <table class="table table-hover sical-data-table sical-data-table" data-placeholder="Buscar Item">
    <thead>
      <tr>
        <th>CÃ³digo</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% inventories.each do |item| %>
            <tr>
              <td><%= item.code %></td>
              <td><%= item.name %></td>
              <td><%= item.brand %></td>
              <td><%= item.product_model %></td>
              <td>
                <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, inventory_path(item), class: "btn btn-info btn-sm #{current_user.can_view(@controller) ? '' : 'disabled'}", data: { "toggle" => "tooltip" }, title: "Ver" %>
                <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_inventory_path(item), class: "btn btn-success btn-sm #{current_user.can_edit(@controller) ? '' : 'disabled'}", data: { "toggle" => "tooltip" }, title: "Editar" %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, inventory_path(item),class: "btn btn-warning btn-sm #{current_user.can_delete(@controller) ? '' : 'disabled'}", data: { "toggle" => "tooltip" }, title: "Eliminar", method: :delete %>
              </td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>