<%= form_for @inventory, url: path, method: method, :html => { class: "form-horizontal validate" } do |f| %>
  <% if @inventory.errors.any? %>
    <% @inventory.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <% end %>
  <div class="form-group">
    <div>
      <%= f.label :Nombre %>
    </div>
    <div>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :Marca %>
    </div>
    <div>
      <%= f.text_field :brand, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :Modelo %>
    </div>
    <div>
      <%= f.text_field :model, class: "form-control " %>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :Descripción %>
    </div>
    <div>
      <%= f.text_field :description, class: "form-control " %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Fecha_de_ingreso %>
    <div class="input-group date">
      <%= f.text_field :date_of_admission, class: "form-control", id: "inventory-form-datepicker" %>
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :Vida_útil %>
    </div>
    <div>
      <%= f.text_field :time_of_life, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="text-center">
      <%= link_to "Cancelar", inventories_path, class: "btn btn-primary sical-btn-cancel" %>
      <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
    </div>
  </div>
<% end %>