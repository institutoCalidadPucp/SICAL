<div class="material-datatables">
  <table id="roles-table" class="table table-hover sical-data-table sical-data-table" data-placeholder="Buscar Roles">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= role.description %></td>
          <td><%= role.status %><</td>
