<div class="nested-fields form-group row">
  <% if @service.assign_sorter? %>
    <div class="col-md-9">
      <%= f.text_field :description, class: "form-control", required: "required" %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :value, class: "form-control only-numbers", required: "required" %>
    </div>
    <div class="col-md-1">
      <%= link_to_remove_association f do %>
        <i class="fa fa-times" aria-hidden="true"></i>
      <% end %>
    </div>
  <% elsif @service.classified? or @service.accepted_classified? %>
    <div class="col-md-9">
      <%= f.text_field :description, class: "form-control", required: "required", disabled: true %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :value, class: "form-control only-numbers", required: "required", disabled: true %>
    </div>
  <% end %>
</div> 