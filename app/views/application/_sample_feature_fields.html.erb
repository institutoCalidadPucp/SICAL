<div class="nested-fields form-group row">
  <div class="col-md-9">
    <%= f.text_field :description, class: "form-control", required:"required", disabled: disabled %>
  </div>
  <div class="col-md-2">
    <%= f.text_field :value, class: "form-control only-numbers", required:"required", disabled: disabled %>
  </div>
  <% if editable %>
    <div class="col-md-1">
      <%= link_to_remove_association f do %>
        <i class="fa fa-times" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %>
</div> 