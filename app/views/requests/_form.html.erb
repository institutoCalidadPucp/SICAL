<%= nested_form_for @request, url: path, method: method, :html => { class: "form-horizontal validate sical-form sical-form-validated" } do |f| %>

  <% if @request.errors.any?%>
    <% @request.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>

  <div class="form-group row">
    <%= f.label :Laboratorio, class: "col-md-3 col-fom-label" %>
   <div class="col-md-9">
      <%= f.collection_select :laboratory_id, @laboratories, :id, :name, {}, class: "form-control", required: "required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Asunto,class: "col-lg-3 col-fom-label"  %>   
    <div class="col-md-9"> 
    <%= f.text_field :topic ,class: "form-control", required:"required"%>
    </div>
  </div> 

  <div class="form-group row">
    <div class="col-md-4 col-fom-label">
      <%= f.label :Fecha_Aproximada_de_Recojo %>
    </div>
    <div class="date col-md-8 input-wrapper">
      <div class="input-group sical-input-group">
        <%#= f.text_field :date_of_birth, value: request.date_of_birth ? request.date_of_birth.strftime("%d/%m/%Y") : '' , class: "form-control sical-datepicker", required: "required", date: true, birth: true, onlyAdult: true %>
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6 row">
      <div class="col-md-5 col-fom-label">
        <%= f.label :Archivo_Extra %>
      </div>
      <div class="date col-md-7 input-wrapper">
        <div class="input-group sical-input-group">
          <%#= f.text_field :date_of_birth, value: request.date_of_birth ? request.date_of_birth.strftime("%d/%m/%Y") : '' , class: "form-control sical-datepicker", required: "required", date: true, birth: true, onlyAdult: true %>
        </div>
      </div>
    </div>
  </div>

  

   <%= f.fields_for :request_service_descriptions do |service_form| %>
      <%= service_form.label :sample_name %>
      <%= service_form.text_field :sample_name %>
        
      <%= service_form.label :amount %>
      <%= service_form.text_field :amount %>

      <%= service_form.label :description %>         
      <%= service_form.text_field :description %>         
      
      <%= service_form.link_to_remove "Remove" %>
  <% end %>
  <p><%= f.link_to_add "Add", :request_service_descriptions %></p>

<% end %>
