<%= nested_form_for @request, url: path, method: method, :html => { class: "form-horizontal validate" } do |f| %>

  <% if @request.errors.any?%>
    <% @request.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>

  <div class="form-group row">
    <%= f.label :Laboratorio, class: "col-lg-3 col-fom-label" %>
   <div class="col-md-9">
      <%= f.text_field :laboratory, class: "form-control",required:"required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Asunto,class: "col-lg-3 col-fom-label"  %>   
    <div class="col-md-9"> 
    <%= f.text_field :topic ,class: "form-control", required:"required"%>
    </div>
  </div> 

   <%= f.fields_for :request_service_descriptions, :wrapper => false do |mp_form| %>
       <tr>
            <td><%= mp_form.text_field :sample_name, @menus, {}%></td>
            <td><%= mp_form.text_field :amount %></td>
            <td><%= mp_form.text_field :description %></td>         
     </tr>     
  <% end %>

<% end %>
