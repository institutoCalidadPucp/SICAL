<div class="content">
  <div class="material-datatables">
    <table id="request-datatable" class="table table-hover">
      <thead class="text-primary">
        <tr>
          <th>Codigo</th>
          <th>Laboratorio</th>
          <th>Fecha de Envio</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% requests.each do |request| %>
          <tr>
            <td><%= request.code %></td>
            <td><%= request.laboratory %></td>
            <td><%= request.shipping_date %></td>
            <td><%= request.estate %></td>
            <td>
              <%= link_to edit_request_path(request), class: "btn btn-simple btn-warning btn-icon edit" do %>
                <i class="ti-pencil-alt"></i>
              <% end %>
              <%= link_to employee_path(request), class: "btn btn-simple btn-danger btn-icon remove", method: :delete do %>
                <i class="ti-close"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>