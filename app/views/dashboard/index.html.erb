<div class="row dashboard-wrapper">
  <% @user_menus.each do |menu| %>
    <div class="dashboard-card-wrapper">
      <a class="card-text-link" href= "<%= '/' + menu.tab_reference %>" >
        <div class="card is-card-square">
          <div class="same-row-items">
            <%= image_tag "#{menu.name.parameterize.underscore + '.svg'}", class: "menu-icon" %>
            <p class="number-data" id="number"><%= @values_index[menu.tab_reference] %> </p>
          </div>
            <div class="same-row-items">
              <p class="card-name"><%=menu.name%></p>
            </div>
        </div>
      </a>
    </div>
  <% end %>
</div>