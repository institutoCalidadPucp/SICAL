<div class="card">
  <div class="content">
    <div class="header card-header-text sical-card-header">
      <h1 class="page-header title sical-card-title">Parámetros del sistema <small>Editar</small></h1>
    </div>
    <%= form_for @system_parameter, url: system_parameter_path,  method: :put do |f| %>
      <br>
      <div class="form-group row ">
        <label class="col-md-3">Parámetro </label>
        <div class="col-md-9">
          <%= t("activerecord.attributes.system-parameter.feature.#{@system_parameter.feature}") %>
        </div>
      </div>
      <% if @system_parameter.can_show_description %>
        <div class="form-group row">
          <label class="col-md-3">Descripción </label>
          <div class="col-md-9">
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>
      <% end %>
      <% if @system_parameter.can_show_values %>
        <div class="form-group row">
          <label class="col-md-3">Valor mínimo </label>
          <div class="col-md-9">
            <%= f.text_field :min, class: "form-control"%>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-3">Valor máximo </label>
          <div class="col-md-9">
            <%= f.text_field :max, class: "form-control"%>
          </div>
        </div>
      <% end %>
      <div class="form-group ">
        <div class="text-center">
          <%= link_to "Cancelar", system_parameters_path, class: "btn btn-primary sical-btn-cancel" %>
          <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
        </div>
      </div>  
    <% end %>
  </div>
</div>
