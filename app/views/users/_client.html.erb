<div class="form-group row">
  <div class="col-md-3 col-fom-label"> 
    <%= f.label :nombre %>
  </div>
  <div class="col-md-9 input-wrapper">    
    <%= f.text_field :name, class: "form-control", required: "required" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3 col-fom-label">
    <%= f.label :ruc %>
  </div>
  <div class="col-md-9 input-wrapper">
    <%= f.text_field :ruc, class: "form-control only-numbers", minLength: "11", maxLength: "11", required: "required" %>
  </div>
</div> 
<div class="form-group row">
  <div class="col-md-3 col-fom-label"> 
    <%= f.label :Persona_de_contacto %>
  </div>
  <div class="col-md-9 input-wrapper">    
    <%= f.text_field :contact_person, class: "form-control", required: "required" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3 col-form-label">
    <%= f.label :correo_electrónico%>
  </div>
  <div class="col-md-9 input-wrapper">
    <%= f.text_field :email, class: "form-control", email: true ,required:"required"%>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3 col-fom-label"> 
    <%= f.label :Contraseña %>
  </div>
  <div class="col-md-9 input-wrapper">    
    <%= f.password_field :password, class: "form-control", required: "required" %>
  </div>
</div>       
<div class="form-group row">
  <div class="col-md-3 col-fom-label">
    <%= f.label :Teléfono %>
  </div>
  <div class="col-md-9 input-wrapper">
    <%= f.text_field :phone, class: "form-control only-numbers", minLength: "7", maxLength: "9", required: "required" %>
  </div>
</div> 
<div class="form-group row">
  <div class="col-md-3 col-fom-label"> 
    <%= f.label :Direccion %>
  </div>
  <div class="col-md-9 input-wrapper">    
    <%= f.text_field :address, class: "form-control", required: "required" %>
  </div>
</div>

