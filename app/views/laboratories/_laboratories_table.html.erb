<div class="material-datatables">
  <table id="laboratory-table" class="table table-no-bordered table-hover sical-data-table" data-placeholder="Buscar Laboratorios">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Dirección</th>
        <th>Descripción</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% laboratories.each do |laboratory| %>
        <tr>
          <td><%= laboratory.name %></td>
          <td><%= laboratory.phone %></td>
          <td><%= laboratory.email %></td>
          <td><%= laboratory.address %></td>
          <td><%= laboratory.description %></td>
          <td>
            <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, show_laboratory_path(laboratory), class: "btn btn-primary btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
            <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_laboratory_path(laboratory), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
            <%= link_to '<i class="fa fa-lock" aria-hidden="true"></i>'.html_safe, laboratory_path(laboratory),class: "btn btn-warning btn-sm",title: "Deshabilitar", method: :delete %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
