<div class="material-datatables">
    <div class="dataTables_wrapper container-fluid dt-bootstrap4">
        <div class="row">
          <table class="table table-striped table-no-bordered table-hover dataTable" style="width: 100%;">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Jefe de Laboratorio</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% laboratories.each do |laboratory| %>
                <tr>
                  <td><%= laboratory.name%></td>
                  <td><%= laboratory.phone %></td>
                  <td><%= laboratory.email %></td>
                  <td><%= laboratory.boss %></td><!--boss-->
                  <td>
                    <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_laboratory_path(laboratory), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Edit" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>