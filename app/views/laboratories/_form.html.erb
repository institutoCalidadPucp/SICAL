<%= form_for @laboratory, url: path, method: method, :html => { class: "form-horizontal validate" } do |laboratory| %>

  <div class="form-group col-sm-12">
    <%= f.label :name, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group col-sm-12">
    <%= f.label :phone, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :email	, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control " %>
    </div>
  </div>

   <div class="form-group col-sm-12">
    <%= f.label :boss	, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :boss, class: "form-control " %>
    </div>
  </div>
  <div class="form-group col-sm-12">
    <%= f.label :address, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :address, class: "form-control " %>
    </div>
  </div>
  
  <div class="form-group col-sm-12">
    <%= f.label :description, class: "<c></c>ol-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_area :description, class: "form-control " %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-sm-8 col-xs-12">
      <div class="col-sm-12 text-right">
        <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
      </div>
    </div>
  </div>
<% end %>