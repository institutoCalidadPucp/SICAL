<%= form_for laboratory, url: path, method: method, :html => { class: "form-horizontal validate sical-form sical-form-validated" } do |f| %>
  <% if @laboratory.errors.any?%>
    <% @laboratory.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <% end %>
  <div class="form-group row">
    <%= f.label :Nombre, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :name, class: "form-control", required:"required" , maxlength:"80" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Correo  , class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :email, class: "form-control ", required:"required" ,maxlength:"60", email: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Dirección, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :address, class: "form-control ", required:"required" , maxlength:"60" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Teléfono, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :phone, class: "form-control only-numbers",maxlength:"9",required:"required" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Descripción, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_area :description, class: "form-control item-description", rows: "5", required:"required" %>
    </div>
  </div>
  <div class="sical-form-buttons">
    <div class="text-center">
      <%= link_to "Cancelar", laboratories_path, class: "btn btn-primary sical-btn-cancel" %>
      <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
    </div>
  </div>
<% end %>