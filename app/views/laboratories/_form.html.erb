
<%= form_for @laboratory, url: path, method: method, :html => { class: "form-horizontal validate" } do |f| %>

  <% if @laboratory.errors.any?%>
    <% @laboratory.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <% end %>

<div class="card">
    <div class="content">
    <fieldset>
      <div class="form-group row ">
        <%= f.label :nombre, class: "col-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", required:"required" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
        <div class="form-group row">
          <%= f.label :email  , class: "col-md-2 col-form-label" %>
          <div class="col-sm-6">
            <%= f.text_field :email, class: "form-control ", required:"required" %>
          </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="form-group row">
          <%= f.label :direccion, class: "col-md-2 col-form-label" %>
          <div class="col-sm-6">
            <%= f.text_field :address, class: "form-control ", required:"required" %>
          </div>
        </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <%= f.label :telefono, class: "col-md-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.text_field :phone, class: "form-control", maxlength:"9",required:"required" %>
        </div>
      </div>
    </fieldset>

    <fieldset>   
      <div class="form-group row">
        <%= f.label :descripcion, class: "col-md-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.text_field :description, class: "form-control", required:"required" %>
        </div>
      </div>
    </fieldset>
  </div>

</div>

  <div class="form-group">
    <div class="col-sm-12 col-md-8">
      <div class="col-sm-12 text-right">
        <%= f.submit "Guardar", class: "btn btn-fill btn-default", data: {disable_with: 'Please Wait...'}  %>
      </div>
    </div>
  </div>
<% end %>