<div class="card">
  <div class="content">
    <div class="header card-header-text sical-card-header">
      <h1 class="page-header title sical-card-title">Laboratorio <small>Ver</small></h1>
    </div>
    <%= form_for @laboratory, url: path, method: method, :html => { class: "form-horizontal validate sical-form sical-form-validated" }do|f| %>
        <% if @laboratory.errors.any?%>
          <% @laboratory.errors.full_messages.each do |m| %>
            <p><%= m %></p>
          <% end %>
        <% end %>
        <div class="form-group row">
          <%= f.label :nombre, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :name, class: "form-control", maxlength:"50"  %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email  , class: "col-md-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :email, class: "form-control ",  email: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :direccion, class: "col-md-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :address, class: "form-control ", maxlength:"60" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :telefono, class: "col-md-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :phone, class: "form-control", onkeypress:"return (event.charCode >= 48 && event.charCode <=57) || event.charCode == 0",maxlength:"9",required:"required" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :descripcion, class: "col-md-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :description, class: "form-control",, maxlength:"90", required:"required" %>
          </div>
        </div>
        <div class="sical-form-buttons">
          <div class="text-center">
            <%= link_to "Cancelar", laboratories_path, class: "btn btn-primary sical-btn-cancel" %>
          </div>
        </div>
      <% end %>
  </div>
</div>