<h3 class="p-b-10 p-l-10"><%= title %></h3>

<div class="mailbox-messages flex-1 content">
  <div class="scroll">
    <ul>
      <% if quotations.empty?%>
        <li class="form-group row">
          No tiene mensajes sin leer.
        </li>
      <% else %>
        <% quotations.each do |quotation| %>
          <li class="form-group row" >
            <div class="col-md-2 text-center subject-date">
              <div>
                <%= quotation.created_at.strftime('%I:%M%p') %>
              </div>
              <div>
                <%= quotation.created_at.strftime('%^b %d') %>
              </div>
            </div>
            <div class="col-md-10 subject">
              <%= link_to edit_quotation_path(quotation) do %>
                <%= quotation.subject %>
              <% end %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
    <%#= link_to , id: 'more-messages', class: 'flex-container' do %>
      <span class='mailbox'></span><span class='text flex-1'>Ver todos los mensajes</span><span class='next'></span>
    <%# end %>
  </div>
</div>

