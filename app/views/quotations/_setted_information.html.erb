
<div id="informacion-general" class="tabcontent" style="display: block;">
  <div class="form-group row">
    <label class= "col-md-3 col-form-label">Cliente</label>
     <div class="col-md-9">
        <%= @service.client.name %>
    </div>
  </div>
  <div class="form-group row">
    <label class= "col-md-3 col-form-label">Laboratorio</label>
     <div class="col-md-9">
        <%= @service.laboratory.name %>
    </div>
  </div>

  <div class="form-group row">
    <label class= "col-md-3 col-form-label">Fecha Próxima de Recojo</label>
     <div class="col-md-9">
        <%= @service.pick_up_date.strftime("%d-%m-%Y")%>
    </div>
  </div>

  <div class="form-group row">
    <label class= "col-md-3 col-form-label">Asunto</label>
     <div class="col-md-9">
        <%= @service.subject %>
    </div>
  </div>

  <div class="form-group row">
    <label class= "col-md-3 col-form-label">Muestra(s)</label>
    <div class="col-md-9 offset-md-3">
      <div class="form-group row">
        <h4 class="col-md-4">
          Nombre
        </h4>
        <h4 class="col-md-4">
          Cantidad
        </h4>
        <h4 class="col-md-4">
          Descripción
        </h4>
      </div>
    </div>

    <div class="col-md-9 offset-md-3">
      <div class="form-group row">
        <% @service.sample_preliminaries.each do |preliminary| %>       
            <div class="col-md-4 form-control">
              <%= preliminary.name %>
            </div>
            <div class="col-md-4 form-control">
              <%= preliminary.quantity %>
            </div>
            <div class="col-md-4 form-control">
              <%= preliminary.description %>
            </div>        
        <% end %>
      </div>
    </div>
  </div>
</div>

  