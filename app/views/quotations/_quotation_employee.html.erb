<div class="nested-fields">
  <div class="form-group row">
    <%= f.label :Codigo_cliente, class: "col-md-3 col-fom-label" %>
     <div class="col-md-9">
        <%= f.text_field :client_code,class: "form-control", maxLength:"8", required: "required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Codigo_pucp, class: "col-md-3 col-fom-label" %>
     <div class="col-md-9">
        <%= f.text_field :pucp_code,class: "form-control", maxLength:"8", required: "required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Categoria, class: "col-md-3 col-fom-label" %>
     <div class="col-md-9">
        <%= f.collection_select :sample_category_id, @sample_categories, :id, :name, {}, class: "form-control", required: "required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Descripcion, class: "col-md-3 col-fom-label" %>
     <div class="col-md-9">
        <%= f.text_field :description,class: "form-control", maxLength:"80", required: "required" %>
    </div>
  </div>

  <div class="form-group inline-block">
    <%= f.label :sample_methods %>
     <div class="col-md-2">
        <%= f.collection_select :sample_method_id, @sample_methods, :id, :name, {}, readonly: true, class: "sample-methods" %>
    </div>
  </div>

  <div class="form-group inline-block">
    <%= f.label :trabajador %>
     <div class="col-md-2">
      <%= f.collection_select :user_id, @users, :id, :name, {} %>
    </div>
  </div>

    <%= link_to_remove_association f do %>
    <% end %>

    <div class="sample-feature-container">
      <div class="header">
        <span>Mas Detalles</span>
      </div>
      <div class="sample-feature-content">
        <%= f.fields_for :sample_features do |s_f| %>
            <%= render 'sample_feature_fields', f: s_f %>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= link_to_add_association "", f, :sample_features%>
    </div>
</div>