<%= form_for @employee, url: path, method: method, :html => { class: "form-horizontal validate" } do |f| %>

  <% if @employee.errors.any?%>
    <% @employee.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <% end %>
  
  <div class="form-group col-sm-12">
    <%= f.label :nombre, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :apellido, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>


  <div class="form-group col-sm-12">
    <%= f.label :email  , class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control " %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :direccion, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :address, class: "form-control " %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :telefono, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :fecha_nacimiento, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.date_field :date_of_birth, value: Time.now.strftime('%Y-%m-%d'),  class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :genero, class: "col-sm-2 text-left" %>
    <div class="col-sm-6">
      <%= f.select :gender, User.genders.keys, {}, class: "form-control" %>
    </div>
  </div>  

  <div class="form-group">
    <div class="col-md-8 col-sm-8 col-xs-12">
      <div class="col-sm-12 text-right">
        <%= f.submit "Save", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
      </div>
    </div>
  </div>
<% end %>