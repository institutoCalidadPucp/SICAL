<section class="employees-index">
  <div class="card">
    <div class="header card-header-text employees-header">
      <h1 class="employee-card-title">
        Empleados
      </h1>
      <div>
        <%= link_to 'Nuevo Empleado', new_employee_path, class: "btn btn-primary align-right"  %>
      </div>
    </div>
    <div class="employees-content">
      <div id="employees-table">
        <%= render 'employees_table', employees: @employees %>
      </div>
    </div>
  </div>
</section>