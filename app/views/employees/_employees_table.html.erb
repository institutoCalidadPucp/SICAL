<div class="content">
  <div class="material-datatables">
    <table id="employee-datatable" class="table table-hover">
      <thead class="text-primary">
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Correo</th>
          <th>Cargo</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.last_name %></td>
            <td><%= employee.email %></td>
            <td><%= employee.category %></td>
            <td>
              <%= link_to edit_employee_path(employee), class: "btn btn-simple btn-warning btn-icon edit" do %>
                <i class="ti-pencil-alt"></i>
              <% end %>
              <%= link_to employee_path(employee), class: "btn btn-simple btn-danger btn-icon remove", method: :delete do %>
                <i class="ti-close"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
