<div class="material-datatables">
  <table class="table table-hover sical-data-table sical-data-table" data-placeholder="Buscar Item">
    <thead>
      <tr>
        <th>Asunto</th>
        <th>cliente</th>
        <th>estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% services.each do |service| %>
            <tr>
              <td><%= service.subject %></td>
              <td><%= service.client.name %></td>
              <td><%= service.work_flow %></td>
              <td>
                <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, check_service_path(service), class: "btn btn-info btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
                <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_check_service_path(service), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, check_service_path(service),class: "btn btn-warning btn-sm", data: { "toggle" => "tooltip" }, title: "Eliminar", method: :delete %>
              </td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>