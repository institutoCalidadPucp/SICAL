<%= nested_form_for @sample_category, url: path, method: method, :html => { class: "form-horizontal validate sical-form sical-form-validated" } do |f| %>
  <% if @sample_category.errors.any?%>
    <% @sample_category.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <div class="form-group row">
    <%= f.label :Nombre, class: "col-md-3 col-fom-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :name, class: "form-control",maxLength:"30", required:"required" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :DescripciÃ³n, class: "col-md-3 col-fom-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_area :description, class: "form-control role-description", rows:"5", required:"required" %>
    </div>
  </div>

  <% if current_user.admin? %>
    <div class="form-group row">
      <div class="col-md-3 col-fom-label">
        <%= f.label :laboratorio %>
      </div>
      <div class="col-md-9 input-wrapper">
        <%= f.collection_select :laboratory_id, @laboratories, :id, :name, {}, class: "form-control", required: "required" %>
      </div>
    </div>    
  <% end %>

  <div class="form-group row">
    <%= f.label :Metodos_de_Ensayo, class: "col-md-3 col-fom-label" %>
    <div class="col-md-9 input-wrapper">
      <div>
      <%= hidden_field_tag 'sample_category[sample_method_ids][]', nil %>
      <% SampleMethod.all.each do |sample_method| %>
        <div>
      <%= check_box_tag 'sample_category[sample_method_ids][]', sample_method.id, @sample_category.sample_method_ids.include?(sample_method.id), id: dom_id(sample_method)%>
      <%= label_tag dom_id(sample_method), sample_method.name -%>
    </div>
      <% end %>
    </div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Valores, class: "col-md-3 col-fom-label" %>
    <div class="col-md-9 text-right" >
      <p><%= link_to_add_association "Agregar valores", f, :sample_features, class: "btn btn-primary sical-btn-add-menu btn-add-sample-value", data: {association_insertion_method: 'append' }%></p>
    </div>
  </div>


   

  


  <div class="form-group">
    <div class="text-center">
      <%= link_to "Cancelar", sample_categories_path, class: "btn btn-primary sical-btn-cancel" %>
      <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
    </div>
  </div>
<% end %>