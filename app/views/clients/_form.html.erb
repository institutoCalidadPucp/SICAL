<%= form_for @client, url: path, method: method, :html => { class: "form-horizontal validate sical-form sical-form-validated" } do |f| %>
  <% if @client.errors.any?%>
    <% @client.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <br>
  <% end %>
  <div class="form-group row">
    <%= f.label :nombre, class: "col-md-3 col-form-label" %>
    <div class="col-md-9">
      <%= f.text_field :name, class: "form-control", required:"required", maxlength:"50" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :ruc, class: "col-md-3 col-form-label" %>
    <div class="col-md-9">
      <%= f.text_field :ruc, class: "form-control", onkeypress:"return (event.charCode >= 48 && event.charCode <=57) || event.charCode == 0", required:"required",maxlength:"11" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :email	, class: "col-md-3 col-form-label" %>
    <div class="col-md-9">
      <%= f.text_field :email, class: "form-control", email: true ,required:"required"%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :telefono, class: "col-md-3 col-form-label" %>
    <div class="col-md-9">
      <%= f.text_field :phone, class: "form-control", onkeypress:"return (event.charCode >= 48 && event.charCode <=57) || event.charCode == 0", maxlength:"9",required:"required" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :direccion, class: "col-md-3 col-form-label" %>
    <div class="col-md-9">
      <%= f.text_field :address, class: "form-control", required:"required" %>
    </div>
  </div>
  <div class="sical-form-buttons">
    <div class="text-center">
      <%= link_to "Cancelar", clients_path, class: "btn btn-primary sical-btn-cancel"  %>
      <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
    </div>
  </div>
<% end %>