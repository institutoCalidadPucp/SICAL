<%= form_for @client, url: path, method: method, :html => { class: "form-horizontal validate sical-form sical-form-validated" } do |f| %>
  <% if @client.errors.any?%>
    <% @client.errors.full_messages.each do |m| %>
      <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        </button>
        <span>
          <b> Error - </b> <%= m %>
        </span>
      </div>
    <% end %>
  <br>
  <% end %>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :nombre%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :name, class: "form-control", required:"required", maxlength:"50" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :ruc%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :ruc, class: "form-control only-numbers", required:"required",maxlength:"11" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :persona_de_contacto%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :person_contact, class: "form-control", required:"required", maxlength:"50" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :correo_electrónico%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :email, class: "form-control", email: true ,required:"required"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :teléfono%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :phone, class: "form-control only-numbers", maxlength:"9",required:"required" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :dirección%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :address, class: "form-control", required:"required" %>
    </div>
  </div>
  <div class="sical-form-buttons">
    <div class="text-center">
      <%= link_to "Cancelar", clients_path, class: "btn btn-primary sical-btn-cancel"  %>
      <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
    </div>
  </div>
<% end %>