<%= form_for @client, url: path, method: method, :html => { class: "form-horizontal validate" } do |f| %>

  <% if @client.errors.any?%>
    <% @client.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <% end %>
  
  <div class="form-group row">
    <%= f.label :nombre, class: "col-md-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", required:"required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :ruc, class: "col-md-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :ruc, class: "form-control", required:"required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email	, class: "col-md-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control " %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :telefono, class: "col-md-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :phone, class: "form-control", required:"required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :direccion, class: "col-md-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :address, class: "form-control", required:"required" %>
    </div>
  </div>

  <div class="col-sm-12 text-right">
    <%= f.submit "Guardar", class: "btn btn-fill btn-primary", data: {disable_with: 'Please Wait...'}  %>
  </div>

  <%= link_to 'Volver', clients_path  %>
<% end %>