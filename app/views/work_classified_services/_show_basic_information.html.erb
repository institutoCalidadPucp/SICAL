<div class="form-group row">
  <label class= "col-md-3 col-form-label">Cliente</label>
  <div class="col-md-9">
      <%= service.client.name %>
  </div>
</div>

<div class="form-group row">
  <label class= "col-md-3 col-form-label">Laboratorio</label>
  <div class="col-md-9">
      <%= service.laboratory.name %>
  </div>
</div>
<div class="form-group row">
  <label class= "col-md-3 col-form-label">Fecha Próxima de Recojo</label>
  <div class="col-md-9">
      <%= service.pick_up_date.strftime("%d/%m/%Y") %>
  </div>
</div>

<div class="form-group row">
  <label class= "col-md-3 col-form-label">Asunto</label>
  <div class="col-md-9">
      <%= service.subject %>
  </div>
</div>


<table class="table table-no-bordered table-hover">
    <thead>
      <th>Nombre Muestra</th>
      <th>Cantidad</th>
      <th>Categoría de Muestra</th>
      <th>Método de Muestra</th>
      <th>Descripcion</th>     
    </thead>
    <tbody>
    <tr>
        <td><%= sample.name %></td>
        <td><%= sample.quantity %></td>
        <td><%= sample.sample_category.name %></td>  
        <td><%= sample.sample_method.name %></td>  
        <td><%= sample.description %></td>    
    </tr>
    </tbody>
</table>
